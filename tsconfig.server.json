    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist-server",
        "rootDir": "./server"
    },
    "include": [
        "server/**/*.ts"
    ]
}